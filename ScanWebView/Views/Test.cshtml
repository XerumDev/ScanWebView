<html>
<head>
    <link rel="stylesheet" href="style.css" />
    <script type="text/javascript">

        function SetMultiBarcode(numBarcode) {
            var qty = numBarcode;
            document.getElementById("textbox").focus();
            location.href = "xerum:multibarcode?num=" + qty;
        }

    </script>
</head>
<body>
    <div data-role="page" data-theme="b">
        <form>

            <div data-role="content">

                <input type="text" id="textbox" name="textbox" />
                <div>
                    <select id="multibarcode" name="multibarcode" onchange="SetMultiBarcode(this.value)">
                        <option value="0" selected>-- N. Barcode --</option>
                        <option value="1">1 Barcode</option>
                        <option value="2">2 Barcode</option>
                        <option value="3">3 Barcode</option>
                        <option value="4">4 Barcode</option>
                        <option value="5">5 Barcode</option>
                    </select>
                </div>


            </div>

        </form>
    </div>
</body>
</html>	